<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MyProfile"
    android:background="@drawable/dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/dp_cover"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/task_overview_bg"
            android:layout_marginTop="-60dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-290dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:id="@+id/avatar"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textSize="21sp"
                android:textColor="@color/colorBody"
                android:fontFamily="@font/poppins_light"/>
            <TextView
                android:id="@+id/role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textSize="17sp"
                android:textColor="@color/colorBody"
                android:fontFamily="@font/poppins_light"
                android:textStyle="italic"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:background="@drawable/badge"
                    android:id="@+id/groups"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="13sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/whiteCardColor"
                    android:fontFamily="@font/poppins_light"
                    android:textStyle="italic"/>
                <TextView
                    android:background="@drawable/badge"
                    android:id="@+id/members"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="13sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/whiteCardColor"
                    android:fontFamily="@font/poppins_light"
                    android:textStyle="italic"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/task_overview_bg"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:background="@drawable/toolbar_bg"
                android:text="@string/profile_details"
                android:textSize="19sp"
                android:textColor="@color/colorBody"
                android:fontFamily="@font/poppins_regular"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="12dp"
                android:background="@drawable/toolbar_bg"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="120dp"
                    android:text="@string/bvn"
                    android:padding="5dp"
                    android:textColor="@color/colorBody"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/bvn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButtonText"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:paddingStart="20dp"
                    android:padding="5dp"/>
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="12dp"
                android:background="@drawable/toolbar_bg"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="120dp"
                    android:text="@string/address"
                    android:padding="5dp"
                    android:textColor="@color/colorBody"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="200dp"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButtonText"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:paddingStart="20dp"
                    android:padding="5dp"/>
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="12dp"
                android:background="@drawable/toolbar_bg"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="120dp"
                    android:text="@string/bank_name"
                    android:padding="5dp"
                    android:textColor="@color/colorBody"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButtonText"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:paddingStart="20dp"
                    android:padding="5dp"/>

            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="12dp"
                android:background="@drawable/toolbar_bg"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="120dp"
                    android:text="@string/bank_number"
                    android:padding="5dp"
                    android:textColor="@color/colorBody"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/bank_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButtonText"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:paddingStart="20dp"
                    android:padding="5dp"/>

            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="12dp"
                android:background="@drawable/toolbar_bg"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="120dp"
                    android:text="@string/gender"
                    android:padding="5dp"
                    android:textColor="@color/colorBody"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButtonText"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:paddingStart="20dp"
                    android:padding="5dp"
                    />

            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="12dp"
                android:background="@drawable/toolbar_bg"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="120dp"
                    android:text="@string/date_of_birth"
                    android:padding="5dp"
                    android:textColor="@color/colorBody"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButtonText"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:paddingStart="20dp"
                    android:padding="5dp"
                    />
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="12dp"
                android:background="@drawable/toolbar_bg"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="120dp"
                    android:text="@string/nationality"
                    android:padding="5dp"
                    android:textColor="@color/colorBody"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/nationality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButtonText"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:paddingStart="20dp"
                    android:padding="5dp"
                    />
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="12dp"
                android:background="@drawable/toolbar_bg"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="120dp"
                    android:text="@string/soo"
                    android:padding="5dp"
                    android:textColor="@color/colorBody"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/state_of_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButtonText"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:paddingStart="20dp"
                    android:padding="5dp"
                    />
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="12dp"
                android:background="@drawable/toolbar_bg"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="120dp"
                    android:text="@string/sor"
                    android:padding="5dp"
                    android:textColor="@color/colorBody"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/state_of_residence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButtonText"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:paddingStart="20dp"
                    android:padding="5dp"
                    />
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="12dp"
                android:background="@drawable/toolbar_bg"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="120dp"
                    android:text="@string/lg"
                    android:padding="5dp"
                    android:textColor="@color/colorBody"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/lg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButtonText"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:paddingStart="20dp"
                    android:padding="5dp"
                    />
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="12dp"
                android:background="@drawable/toolbar_bg"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="120dp"
                    android:text="@string/kids"
                    android:padding="5dp"
                    android:textColor="@color/colorBody"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/kids"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButtonText"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:paddingStart="20dp"
                    android:padding="5dp"
                    />
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="12dp"
                android:background="@drawable/toolbar_bg"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="120dp"
                    android:text="@string/mstatus"
                    android:padding="5dp"
                    android:textColor="@color/colorBody"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/mstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButtonText"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:paddingStart="20dp"
                    android:padding="5dp"
                    />
            </GridLayout>
        </LinearLayout>
        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="SIGN OUT"
            android:background="@drawable/register_btn"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorButtonText"
            android:fontFamily="@font/poppins_regular"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>